    <!--회원 아이디 조회-->
    <select id="findById" parameterType="String" resultType="com.latte.member.response.MemberResponse">
        <!--AuthMapper.findById-->
        <![CDATA[
            SELECT
                mbr_id
              , password
              , mbr_name
              , age
              , nickname
              , image_url
              , allergy
              , cup_day
              , gender
              , cell_phone
              , email
              , pregnancy
              , preg_month
              , role
              , symptom
              , delete_yn
              , reg_date
              , update_date
            FROM tb_member
            where mbr_id = #{mbrId}
        ]]>
    </select>

    <!--회원 리스트 조회-->
    <select id="getMemberList" resultType="list">
        <!--AuthMapper.getMemberList-->
        SELECT
        <include refid="memberColumns" />
        FROM tb_member
    </select>

    <!--회원 정보 수정-->
    <update id="updateMember" parameterType="com.latte.member.request.MemberRequest">
        <!--AuthMapper.updateMember-->
        UPDATE `tb_member`
        set
            `mbr_id` = #{mbrId}
          , `password` = #{password}
          , `mbr_name` = #{mbrName}
          , `age` = #{age}
          , `nickname` = #{nickname}
          , `image_url` = #{imageUrl}
          , `allergy` = #{allergy}
          , `cup_day` = #{cupDay}
          , `gender` = #{gender}
          , `cell_phone` = #{cellPhone}
          , `email` = #{email}
          , `pregnancy` = #{pregnancy}
          , `preg_month` = #{pregMonth}
          , `role` = #{role}
          , `symptom` = #{symptom}
          , `update_date` = NOW()
        WHERE
            `mbr_id`=#{mbrId};
    </update>

    <!--회원 삭제-->
    <delete id="deleteMember" parameterType="String">
        <!--AuthMapper.deleteMember-->
        UPDATE `tb_member`
        set
            delete_yn = 'Y'
        WHERE
            `mbr_id`=#{mbrId};
    </delete>

    <!-- 회원 수 카운팅 (ID 중복 체크) -->
    <select id="countByLoginId" parameterType="string" resultType="int">
        /* AuthMapper.countByLoginId */
        SELECT
            COUNT(*)
        FROM
            tb_member
        WHERE
            mbr_id = #{mbrId}
    </select>


    <!--회원 정보 등록-->
    <insert id="insertMember" parameterType="com.latte.member.request.MemberRequest">
        /* AuthMapper.insertMember */
        INSERT INTO tb_member (
        <include refid="memberColumns" />
        ) VALUES (
                   #{mbrId}
                 , #{password}
                 , #{mbrName}
                 , #{age}
                 , #{nickname}
                 , #{imageUrl}
                 , #{allergy}
                 , #{cupDay}
                 , #{gender}
                 , #{cellPhone}
                 , #{email}
                 , #{pregnancy}
                 , #{pregMonth}
                 , #{role}
                 , #{symptom}
                 , #{deleteYn}
                 , NOW()
                 , NULL
                 )
    </insert>


</mapper>